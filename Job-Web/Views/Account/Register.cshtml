@model UserRegisterModel

<div class="container mt-5">
    <h3 class="text-center">Register</h3>
    <form asp-action="Register" method="post">
        <div class="form-outline mb-4">
            <input type="text" asp-for="Username" class="form-control" required />
            <label class="form-label">Username</label>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-outline mb-4">
            <input type="email" asp-for="Email" class="form-control" required />
            <label class="form-label">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-outline mb-4">
            <input type="password" asp-for="Password" class="form-control" required />
            <label class="form-label">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label class="form-label">Role</label>
            <select asp-for="Role" class="form-control">
                <option value="User">User</option>
                <option value="Employer">Employer</option>
                <!-- Tùy chọn Admin có thể bị ẩn hoặc chỉ admin được sử dụng -->
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Register</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}